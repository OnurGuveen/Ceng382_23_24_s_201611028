@page
@model HotelReservationSystem.Pages.UserRegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center">Register</h2>

<form method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="NewUser.Name" class="control-label col-md-2">Name</label>
        <div class="col-md-10">
            <input asp-for="NewUser.Name" class="form-control" placeholder="Enter your name" />
            <span asp-validation-for="NewUser.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NewUser.Email" class="control-label col-md-2">Email</label>
        <div class="col-md-10">
            <input asp-for="NewUser.Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="NewUser.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NewUser.Password" class="control-label col-md-2">Password</label>
        <div class="col-md-10">
            <input asp-for="NewUser.Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="NewUser.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
</form>

<div class="text-center">
    <a asp-page="/Login">Already have an account? Login here</a>
</div>
