@page
@model Reservation.Pages.ApplicationErrorModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger text-center">Error</h1>
<h2 class="text-danger text-center">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    <p class="text-center">
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<p class="text-center">
    <a asp-page="/Index">Back to Home</a>
</p>
