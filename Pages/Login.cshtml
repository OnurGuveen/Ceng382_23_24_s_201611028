@page
@model HotelReservationSystem.Pages.UserLoginModel
@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center">Login</h2>

<form method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="UserEmail" class="control-label col-md-2">Email</label>
        <div class="col-md-10">
            <input asp-for="UserEmail" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="UserEmail" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="UserPassword" class="control-label col-md-2">Password</label>
        <div class="col-md-10">
            <input asp-for="UserPassword" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="UserPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
</form>

<div class="text-center">
    <a asp-page="/Register">Don't have an account? Register here</a>
</div>
